
OBJECTS=replxx/conversion.o replxx/inputbuffer.o replxx/replxx.o \
  replxx/escape.o replxx/io.o replxx/util.o \
  replxx/history.o replxx/prompt.o replxx/windows.o \
  replxx/ConvertUTF.o replxx/wcwidth.o \
  api.o

all: $(SHLIB)

%.o: %.cxx
	$(CXX11) $(CXX11STD) $(CXX11FLAGS) $(CXX11PICFLAGS) \
	$(ALL_CPPFLAGS) $(CXXFLAGS) -c $< -Ireplxx -o $@
